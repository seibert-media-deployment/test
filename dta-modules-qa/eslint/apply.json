{
  "name": "eslint",
  "applySteps": [{
    "description": "install npm package",
    "type": "npm-install",
    "npm-module": "eslint"
  },{
    "description": "init eslint",
    "type": "command",
    "check": "ls .eslintrc*",
    "changedFiles": ".eslintrc*",
    "commands": [
      "node_modules/.bin/eslint --init"
    ]
  },{
    "description": "npm script 'eslint' exists",
    "type": "npm-script",
    "script-name": "eslint",
    "script-command": "eslint ."
  },{
    "description": "npm script 'eslint-fix' exists",
    "type": "npm-script",
    "script-name": "eslint-fix",
    "script-command": "eslint --fix ."
  }]
}
