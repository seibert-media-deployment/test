{
  "name": "editorconfig",
  "applySteps": [{
    "description": "install npm package",
    "type": "command",
    "check": "npm ls eclint",
    "commands": [
      "npm install --save eclint"
    ]
  },{
    "description": "initial config",
    "type": "command",
    "check": "ls .editorconfig",
    "commands": [
      "cp $DEV_TOOL_APPLY_MODULES/editorconfig/.editorconfig ./",
      "git add .editorconfig"
    ]
  },{
    "description": "config diff",
    "type": "command",
    "check": "git diff --no-index -- .editorconfig $DEV_TOOL_APPLY_PATH/src/modules/editorconfig/.editorconfig",
    "commands": [
      "cp $DEV_TOOL_APPLY_MODULES/editorconfig/.editorconfig ./",
      "git add -p .editorconfig"
    ]
  },{
    "description": "npm script 'eclint' exists",
    "type": "command",
    "check": "npm run eclint",
    "commands": [
      "$DEV_TOOL_APPLY_BIN/json -I -f package.json -e 'this.scripts.eclint=\"eclint check .\"'"
    ]
  },{
    "description": "npm script 'eclint-fix' exists",
    "type": "command",
    "check": "npm run eclint-fix",
    "commands": [
      "$DEV_TOOL_APPLY_BIN/json -I -f package.json -e 'this.scripts[\"eclint-fix\"]=\"eclint fix .\"'"
    ]
  }]
}
