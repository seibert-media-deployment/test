{
  "name": "editorconfig",
  "applySteps": [{
    "description": "install npm package",
    "type": "npm-install",
    "npm-module": "eclint"
  },{
    "description": "initial config",
    "type": "copy-from-modules",
    "srcPath": ".editorconfig",
    "destPath": ".editorConfig"
  },{
    "description": "config diff",
    "type": "command",
    "check": "git diff --no-index -- .editorconfig $DEV_TOOL_APPLY_PATH/src/modules/editorconfig/.editorconfig",
    "commands": [
      "cp $DEV_TOOL_APPLY_MODULES/editorconfig/.editorconfig ./",
      "git add -p .editorconfig"
    ]
  },{
    "description": "npm script 'eclint' exists",
    "type": "npm-script",
    "script-name": "eclint",
    "script-command": "eclint check ."
  },{
    "description": "npm script 'eclint-fix' exists",
    "type": "npm-script",
    "script-name": "eclint-fix",
    "script-command": "eclint fix ."
  }]
}
