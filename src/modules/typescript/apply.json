{
  "name": "typescript",
  "applySteps": [{
    "description": "install npm package",
    "type": "command",
    "check": "npm ls typescript",
    "commands": [
      "npm install --save typescript"
    ]
  },{
    "description": "initial config",
    "type": "command",
    "check": "ls tsconfig.json",
    "commands": [
      "node_modules/.bin/tsc --init",
      "git add tsconfig.json"
    ]
  }]
}
